<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

 <!--Main Site of the project-->

 <main id="site-main">
    <div class="container">
       <div class="box-nav d-flex-justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i>All Employees</a>
           </div>
       </div>
       </div>
    <div  class="form-title text-center">
        <h2 style="margin-left: 5px;" class="text-dark">Update Employee Informations</h2>
    </div>

<form method="POST" id="update_employee">
    <div class="new_employee">
        <div class="form-group">
            <label style="font-weight:normal; " for="Name" class="text-light">Name</label>
            <input type="hidden" name="id" value="<%=employee._id%>">
            <input style='width: 100%;padding: 12px 20px;margin: 8px 0;display: inline-block;border: 1px solid #ccc;border-radius: 4px;box-sizing: border-box;' type="text" name="name" value="<%=employee.name%>" >
        </div>
        <div class="form-group">
         <label for="Date_of_birth" class="text-light">Date of Birth</label>
         <input style='width: 100%;padding: 12px 20px;margin: 8px 0;display: inline-block;border: 1px solid #ccc;border-radius: 4px;box-sizing: border-box;' type="datetime-local" name="birth_date" value="<%=employee.birth_date%>" >
        </div>
     <div class="form-group">
        <label for="gender" class="text-light">Gender</label>
        <div class="radio inline">
            <input type="radio" id="radio-2" name="gender" value="male" <%= employee.gender == 'male' ? 'checked' : '' %>>
            <label for="radio-2" class="radio-label">Male</label>
        </div>
        <div class="radio inline">
            <input type="radio" id="radio-3" name="gender" value="female" <%= employee.gender == 'female' ? 'checked' : '' %>>
            <label for="radio-3" class="radio-label">Female</label>
        </div>
     </div>
     <div class="form-group">
         <label for="Salary" class="text-light">Salary</label>
         <input style='width: 100%;padding: 12px 20px;margin: 8px 0;display: inline-block;border: 1px solid #ccc;border-radius: 4px;box-sizing: border-box;' type="number" name="salary" value="<%=employee.salary%>">
     </div>
        <div class="form-group">
          <button type="submit" class="btn text-dark update">Update</button>
        </div>
    </div>
  </form>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
